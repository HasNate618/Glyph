<Window x:Class="Glyph.App.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OverlayWindow" 
        AllowsTransparency="True" 
        Background="Transparent" 
        WindowStyle="None" 
        Topmost="True" 
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Border Background="#AA000000" CornerRadius="8" Padding="10">
            <StackPanel>
                <TextBlock x:Name="CurrentSequenceTextBlock" 
                           FontSize="16" 
                           Foreground="White" 
                           Margin="0,0,0,10"/>
                <ItemsControl x:Name="NextKeysItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Key}" 
                                       Foreground="LightGray" 
                                       Margin="0,5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="DescriptionTextBlock" 
                           FontSize="12" 
                           Foreground="White" 
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>