<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Catppuccin Mocha-inspired theme (best-effort) -->

  <SolidColorBrush x:Key="Glyph.Overlay.BackgroundBrush" Color="#BF1E1E2E" />
  <SolidColorBrush x:Key="Glyph.Overlay.SequenceForeground" Color="#FFCDD6F4" />
  <SolidColorBrush x:Key="Glyph.Overlay.OptionForeground" Color="#FFEBA0AC" />

  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackground" Color="#FF313244" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForeground" Color="#FFCDD6F4" />

  <!-- Per-state keycap styling (action vs layer) - subtle contrast -->
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackgroundAction" Color="#FF313244" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForegroundAction" Color="#FFCDD6F4" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBorderAction" Color="#FF6F9BE8" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackgroundLayer" Color="#FF37384A" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForegroundLayer" Color="#FFC9D3F8" />

  <FontFamily x:Key="Glyph.Overlay.FontFamily">Segoe UI Variable, Segoe UI, Arial</FontFamily>

  <CornerRadius x:Key="Glyph.Overlay.PanelCornerRadius">12</CornerRadius>
  <CornerRadius x:Key="Glyph.Overlay.KeycapCornerRadius">8</CornerRadius>

</ResourceDictionary>
