<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Darcula-like dark theme -->
  <SolidColorBrush x:Key="Glyph.Overlay.BackgroundBrush" Color="#BF0F1115" />
  <SolidColorBrush x:Key="Glyph.Overlay.SequenceForeground" Color="#FFE6E1DC" />
  <SolidColorBrush x:Key="Glyph.Overlay.OptionForeground" Color="#FFB3A7A3" />

  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackground" Color="#FF2B2B2B" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForeground" Color="#FFEEEEEE" />

  <!-- Per-state keycap styling (action vs layer) - subtle contrast -->
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackgroundAction" Color="#FF2B2B2B" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForegroundAction" Color="#FFEEEEEE" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBorderAction" Color="#FF4B6CB0" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackgroundLayer" Color="#FF313335" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForegroundLayer" Color="#FFF0F0F0" />

  <FontFamily x:Key="Glyph.Overlay.FontFamily">Segoe UI Variable, Segoe UI, Arial</FontFamily>

  <CornerRadius x:Key="Glyph.Overlay.PanelCornerRadius">12</CornerRadius>
  <CornerRadius x:Key="Glyph.Overlay.KeycapCornerRadius">8</CornerRadius>

</ResourceDictionary>
