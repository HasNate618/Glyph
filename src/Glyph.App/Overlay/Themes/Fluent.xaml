<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Fluent theme: Windows 11 look, true transparency -->
  <SolidColorBrush x:Key="Glyph.Overlay.BackgroundBrush" Color="#7F1B1B1B" /> <!-- 50% opacity -->
  <SolidColorBrush x:Key="Glyph.Overlay.SequenceForeground" Color="#F2F2F2" />
  <SolidColorBrush x:Key="Glyph.Overlay.OptionForeground" Color="#D6D6D6" />

  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackground" Color="#3A3A3A" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForeground" Color="#FFFFFF" />

  <FontFamily x:Key="Glyph.Overlay.FontFamily">Segoe UI Variable, Segoe UI, Arial</FontFamily>

  <CornerRadius x:Key="Glyph.Overlay.PanelCornerRadius">12</CornerRadius>
  <CornerRadius x:Key="Glyph.Overlay.KeycapCornerRadius">8</CornerRadius>

</ResourceDictionary>
