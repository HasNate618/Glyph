<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Nord-inspired theme -->
  <SolidColorBrush x:Key="Glyph.Overlay.BackgroundBrush" Color="#BF2E3440" />
  <SolidColorBrush x:Key="Glyph.Overlay.SequenceForeground" Color="#FFD8DEE9" />
  <SolidColorBrush x:Key="Glyph.Overlay.OptionForeground" Color="#FFA3B1C6" />

  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackground" Color="#FF3B4252" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForeground" Color="#FFD8DEE9" />

  <!-- Per-state keycap styling (action vs layer) - subtle contrast -->
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackgroundAction" Color="#FF3B4252" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForegroundAction" Color="#FFD8DEE9" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBorderAction" Color="#FF6C8591" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackgroundLayer" Color="#FF3F4756" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForegroundLayer" Color="#FFCFD8E3" />

  <FontFamily x:Key="Glyph.Overlay.FontFamily">Segoe UI Variable, Segoe UI, Arial</FontFamily>

  <CornerRadius x:Key="Glyph.Overlay.PanelCornerRadius">12</CornerRadius>
  <CornerRadius x:Key="Glyph.Overlay.KeycapCornerRadius">8</CornerRadius>

</ResourceDictionary>