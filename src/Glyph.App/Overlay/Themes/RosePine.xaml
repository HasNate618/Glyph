<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- RosePine-inspired theme -->
  <SolidColorBrush x:Key="Glyph.Overlay.BackgroundBrush" Color="#CFE9DCEB" />
  <SolidColorBrush x:Key="Glyph.Overlay.SequenceForeground" Color="#FF2B2F3A" />
  <SolidColorBrush x:Key="Glyph.Overlay.OptionForeground" Color="#FF6F6D7A" />

  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackground" Color="#FFF4E9EF" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForeground" Color="#FF2B2F3A" />

  <!-- Per-state keycap styling (action vs layer) - subtle contrast -->
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackgroundAction" Color="#FFF4E9EF" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForegroundAction" Color="#FF2B2F3A" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBorderAction" Color="#FF7F5F8F" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapBackgroundLayer" Color="#FFF2E6EE" />
  <SolidColorBrush x:Key="Glyph.Overlay.KeycapForegroundLayer" Color="#FF7F5F8F" />

  <FontFamily x:Key="Glyph.Overlay.FontFamily">Segoe UI Variable, Segoe UI, Arial</FontFamily>

  <CornerRadius x:Key="Glyph.Overlay.PanelCornerRadius">12</CornerRadius>
  <CornerRadius x:Key="Glyph.Overlay.KeycapCornerRadius">8</CornerRadius>

</ResourceDictionary>