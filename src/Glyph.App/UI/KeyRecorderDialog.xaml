<Window x:Class="Glyph.App.UI.KeyRecorderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Record Key Sequence" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource Window.Background}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="14" FontWeight="SemiBold" Text="Record Key Sequence" Margin="0,0,0,16" />

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Press keys..." FontSize="48" FontWeight="Light" Foreground="Gray" 
                       HorizontalAlignment="Center" Margin="0,0,0,16" />
            <TextBlock x:Name="RecordedSequenceDisplay" FontSize="20" FontFamily="Courier New" 
                       HorizontalAlignment="Center" Foreground="Green" FontWeight="SemiBold"
                       Text="(waiting for input)" />
            <TextBlock FontSize="11" Foreground="Gray" TextWrapping="Wrap" 
                       Margin="0,16,0,0" HorizontalAlignment="Center"
                       Text="Press Escape to cancel, or click Done when finished" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
            <Button x:Name="ClearButton" Width="100" Content="Clear" Margin="0,0,8,0" />
            <Button x:Name="DoneButton" Width="100" Content="Done" Foreground="Green" FontWeight="SemiBold" />
            <Button x:Name="CancelButton" Width="100" Content="Cancel" Margin="8,0,0,0" />
        </StackPanel>

        <TextBlock Grid.Row="3" FontSize="9" Foreground="Gray" Margin="0,12,0,0" TextWrapping="Wrap"
                   Text="Format: Single letters (a-z), modifiers (Ctrl, Alt, Shift, Win), or named keys (Enter, Tab, etc.)" />
    </Grid>
</Window>
