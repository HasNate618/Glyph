<UserControl x:Class="Glyph.App.UI.KeymapEditorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <UserControl.Resources>
        <Style x:Key="PlainExpanderStyle" TargetType="Expander">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <StackPanel>
                            <ToggleButton x:Name="HeaderSite"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Padding="0"
                                          Focusable="False"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch"
                                          VerticalContentAlignment="Center"
                                          Content="{TemplateBinding Header}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                                          ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                          IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Border x:Name="ExpandContainer" Opacity="0" Visibility="Collapsed" RenderTransformOrigin="0.5,0">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleY="1" />
                                </Border.RenderTransform>
                                <ContentPresenter x:Name="ExpandSite"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  ContentStringFormat="{TemplateBinding ContentStringFormat}" />
                            </Border>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <!-- Static fallback for initial state when IsExpanded starts True -->
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandContainer" Property="Visibility" Value="Visible" />
                                <Setter TargetName="ExpandContainer" Property="Opacity" Value="1" />
                            </Trigger>
                            <!-- Animated expand (EventTrigger works in ControlTemplate; EnterActions does NOT) -->
                            <EventTrigger RoutedEvent="Expander.Expanded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandContainer" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="ExpandContainer" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.10" />
                                        <DoubleAnimation Storyboard.TargetName="ExpandContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0" To="1" Duration="0:0:0.14" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <!-- Animated collapse -->
                            <EventTrigger RoutedEvent="Expander.Collapsed">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandContainer" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}" />
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.10" Value="{x:Static Visibility.Collapsed}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetName="ExpandContainer" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.08" />
                                        <DoubleAnimation Storyboard.TargetName="ExpandContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="1" To="0" Duration="0:0:0.10" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content - Scrollable -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="24,0">
            <StackPanel Margin="0,8,0,16">
                <!-- Header -->
                <TextBlock FontSize="28" FontWeight="SemiBold" Text="Keymap Editor" Margin="0,0,0,4" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" x:Name="LoadingPanel" Visibility="Collapsed">
                    <ui:ProgressRing Width="16" Height="16" IsIndeterminate="True" Margin="0,0,8,0" />
                    <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="Loading keymaps..." />
                </StackPanel>
                <TextBlock x:Name="StatusText" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,0,0,16" Text="Ready" />

                <!-- Global Bindings Section -->
                <Expander Header="Global Bindings" IsExpanded="True" Margin="0,0,0,8">
                    <StackPanel x:Name="GlobalBindingsPanel" Margin="4,8,4,4">
                        <!-- Bindings will be added here dynamically -->
                    </StackPanel>
                </Expander>

                <!-- Per-App Bindings Section -->
                <Expander Header="Per-App Bindings" IsExpanded="True" Margin="0,0,0,8">
                    <StackPanel x:Name="AppBindingsPanel" Margin="4,8,4,4">
                        <TextBlock x:Name="AppBindingsDescription" TextWrapping="Wrap" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" Margin="0,0,0,8">
                            Configure keymaps that apply only when specific applications are focused.
                        </TextBlock>
                        <!-- App bindings will be added here dynamically -->
                        <ui:Button x:Name="AddAppButton" Appearance="Secondary" Content="+ Add App" Margin="0,8,0,0" Padding="12,6" HorizontalAlignment="Left" Click="AddAppButton_Click" />
                    </StackPanel>
                </Expander>

                <!-- App Groups Section -->
                <Expander Header="App Groups" IsExpanded="True" Margin="0,0,0,8">
                    <StackPanel x:Name="AppGroupsPanel" Margin="4,8,4,4">
                        <TextBlock x:Name="AppGroupsDescription" TextWrapping="Wrap" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12" Margin="0,0,0,8">
                            Create groups of applications that share the same keymaps.
                        </TextBlock>
                        <!-- App groups will be added here dynamically -->
                        <ui:Button x:Name="AddGroupButton" Appearance="Secondary" Content="+ Add Group" Margin="0,8,0,0" Padding="12,6" HorizontalAlignment="Left" Click="AddGroupButton_Click" />
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer with Actions -->
        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" Padding="24,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button x:Name="SaveButton" Appearance="Primary" Content="Save to File" Padding="16,8" Margin="0,0,8,0" Click="SaveButton_Click" Icon="{ui:SymbolIcon Save24}" />
                <ui:Button x:Name="ReloadButton" Appearance="Secondary" Content="Reload from File" Padding="16,8" Margin="0,0,8,0" Click="ReloadButton_Click" Icon="{ui:SymbolIcon ArrowSync24}" />
                <ui:Button x:Name="RevealButton" Appearance="Secondary" Content="Reveal Config File" Padding="16,8" Click="RevealButton_Click" Icon="{ui:SymbolIcon FolderOpen24}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
