<Window x:Class="Glyph.App.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Glyph Settings" Height="700" Width="680"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with title and version -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock FontSize="20" FontWeight="SemiBold" Text="Glyph Settings" />
                <TextBlock FontSize="11" Foreground="Gray" Margin="0,4,0,0" x:Name="VersionText" Text="Version (loading...)" />
            </StackPanel>
            <TextBlock Grid.Column="1" x:Name="CurrentGlyphText" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Gray" Text="Glyph: (loading...)" FontSize="12" />
        </Grid>

        <!-- Info section explaining Glyph (native GroupBox style) -->
        <GroupBox Grid.Row="1" Header="About Glyph" Margin="0,0,0,12">
            <StackPanel Margin="8">
                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" LineHeight="18">
                    Glyph is a <Bold>leader-key overlay</Bold> for Windows. Press the <Bold>Glyph key</Bold> to open an overlay, then type short key sequences to trigger actions. Configure your keymaps in YAML, use themes to customize the appearance, and enable breadcrumbs mode to see hints as you type.
                </TextBlock>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,12">
            <GroupBox Header="Glyph Key" Margin="0,0,0,12">
                <StackPanel Margin="8">
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" Margin="0,0,0,8" LineHeight="16">
                        The Glyph key activates the overlay. Click <Bold>Record</Bold>, then press your desired key(s). 
                        For key sequences, press multiple keys in order. Click Record again to stop.
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="RecordButton" Width="120" Padding="8,4" Content="Record" />
                        <TextBlock x:Name="RecordedGlyphText" Margin="12,0,0,0" VerticalAlignment="Center" Text="(not recording)" Foreground="#666" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Overlay">
                <StackPanel Margin="8" Orientation="Vertical">
                    <TextBlock FontSize="11" Foreground="Gray" Margin="0,0,0,6" Text="Theme" />
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <ComboBox x:Name="ThemeCombo" Width="200" />
                        <Button x:Name="OpenThemesFolderButton" Margin="8,0,0,0" Padding="6,4" Content="Open Themes Folder" />
                    </StackPanel>

                    <CheckBox x:Name="BreadcrumbsModeCheckBox" Margin="0,4,0,6" Content="Enable breadcrumbs mode (show only inline breadcrumbs)" />
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="10" LineHeight="14">
                        When enabled, the overlay shows only compact breadcrumbs/hints as you type â€” it does not display the full keymap list. Use this for a minimal, non-distracting overlay.
                    </TextBlock>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock TextWrapping="Wrap" Foreground="Gray" Margin="0,0,0,0" FontSize="11" LineHeight="14">
                ðŸ’¾ Settings auto-save â€” changes apply immediately to the running instance.
            </TextBlock>
        </StackPanel>

        <!-- Help section (native GroupBox) -->
        <GroupBox Grid.Row="5" Header="Quick Start &amp; Tips">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="8">
                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Margin="0,4,0,8" LineHeight="16">
                        <Run FontWeight="SemiBold">1. Set your Glyph key:</Run> Click Record above and press the key (e.g., Capslock, CapsLock+Shift).
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Margin="0,0,0,8" LineHeight="16">
                        <Run FontWeight="SemiBold">2. Configure keymaps:</Run> Edit the keymaps YAML in the Keymap Editor (in Settings). Define key sequences and actions. Tip: enable Breadcrumbs mode for a compact overlay that shows only inline hints instead of the full keymap list.
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Margin="0,0,0,8" LineHeight="16">
                        <Run FontWeight="SemiBold">3. Customize themes:</Run> Choose a theme above or create your own in the Themes folder (JSON).
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" Margin="0,0,0,0" FontSize="10">
                        For more info and examples, visit https://github.com/HasNate618/Glyph
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
    </ScrollViewer>
</Window>
